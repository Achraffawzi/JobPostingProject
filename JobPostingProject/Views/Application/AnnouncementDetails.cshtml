@model JobPostingProject.Models.Announcement

@{
    ViewBag.Title = "Announcement Details";
}

<div class="container">
    <div class="job mt-4 mb-2 mx-auto">
        <div class="job__header d-flex align-items-center justify-content-between flex-wrap mb-0">
            <h5 class="job__title">@Model.Title</h5>
            <h2 class="job__city">@Model.Location</h2>
        </div>
        <h5 class="job__datetime">Posted in @Model.PublicationDate.ToString("dd/MM/yyyy")</h5>
        <h5 class="job__company-name mb-4">By @Model.Company.Name</h5>
        <h5>Job Description :</h5>
        <p class="job__description mt-2 mb-3">@Html.Raw(HttpUtility.HtmlDecode(Model.Description))</p>
        <p class="text-secondary">
            Category : @Model.Category.CategoryName
        </p>
        <p class="text-secondary">
            Level : @Model.Level.LevelName
        </p>
    </div>
</div>

@section test {
    <style>
        /* Job lists */
        .job {
            border: 1px solid #ced4da;
            border-radius: 10px;
            padding: 20px;
            max-width: 90vw;
            width: 800px;
        }

        .job__datetime,
        .job__company-name {
            font-size: 14px;
            font-weight: 200;
            color: #969494;
            margin-bottom: 3px;
        }
    </style>
}