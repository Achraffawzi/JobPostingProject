@model IEnumerable<JobPostingProject.Models.Application>

@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Apply for more jobs", "Index", "Announcement")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Announcement.Title)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Candidate.FirstName)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Announcement.Title)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Candidate.FirstName)
                </td>*@
            <td>
                @Html.ActionLink("Details", "AnnouncementDetails", "Application", new { idAnnouncement = item.AnnouncementID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", "Application", new { idUser = User.Identity.GetUserId(), id = item.AnnouncementID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
