@model JobPostingProject.Models.RegisterViewModelCompany

@{
    ViewBag.Title = "Register as Company";
}


<section class="pt-5">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("RegisterCompany", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype="multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
        <div class="row">

            <div class="form-group col-md">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name,"",new {@class="text-danger" })
                </div>
            </div>
            <div class="form-group col-md">
                @Html.LabelFor(m => m.Logo, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    <input type="file" class="form-control"   accept="image/*" name="LogoFileName" id="Logo"/>
                    @*@Html.TextBoxFor(m => m.Logo, new { @class="form-control", type = "file" })*@
                    @Html.ValidationMessage("Logo", "", new { @class = "text-danger" })
                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md">
                @Html.LabelFor(m => m.Adresse, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Adresse, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Adresse, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md">
                @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", style = "height:230px" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>}
    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10">
            <span>Are you a Candidate?</span>  <a href="@Url.Content("~/Account/Register")" class="text-primary">Register Here</a>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
